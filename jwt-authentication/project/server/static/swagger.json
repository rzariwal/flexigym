openapi: 3.0.0
info:
  title: Authentication JSON Web Token
  description: This is authentication API which generates JSON Web Token.
  contact:
    name: Rohit Zariwal
    email: rzariwal@gmail.com
  license:
    name: Authentication-api
  version: 1.0.0
servers:
  - url: 'http://flexigym.rohitzariwal.co.in'
    description: Authentication JSON Web Token
  - url: 'http://flexigym.rohitzariwal.co.in'
tags:
  - name: Authentication JSON Web Token
    description: Everything about authentication
    externalDocs:
      description: Find out more
      url: 'http://flexigym.rohitzariwal.co.in/swagger'
  - name: Registration
    description: User registration
paths:
  /auth/register:
    post:
      tags:
        - Authentication JSON Web Token
      summary: Register an user
      requestBody:
        description: Optional description in *Markdown*
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/register'

      responses:
        '200':
          description: successful login
        '404':
          description: User does not exist
        '500':
          description: Try again
  /auth/login:
    post:
      tags:
        - Authentication JSON Web Token
      summary: User login
      requestBody:
        description: Optional description in *Markdown*
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/login'
      responses:
        '200':
          description: Successfully logged in.
        '404':
          description: User does not exist.
        '500':
          description: Try again

  /auth/logout:
    post:
      tags:
        - Authentication JSON Web Token
      summary: User logout
      security:
        - bearerAuth: []

      responses:
        '200':
          description: Successfuly logged out
        '401':
          description: fail
        '403':
          description: Provide a valid auth token

  /auth/status:
    get:
      tags:
        - Authentication JSON Web Token
      summary: Get user details
      security:
        - bearerAuth: []
      responses:
        '200':
          description: Successfully logged out.
        '401':
          description: fail

components:
  schemas:
    register:
      type: object
      properties:
        email:
          type: string
        password:
          type: string
        mobile:
          type: string
    login:
      type: object
      properties:
        email:
          type: string
        password:
          type: string
    logout:
      type: object
      properties:
        auth_token:
          type: string
    status:
      type: object
      properties:
        auth_token:
          type: string

  securitySchemes:
    bearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT